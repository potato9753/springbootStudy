<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BoardMapper">
   
    <select id="boardList" resultType="Board">
      select 
      	num,
      	title,
      	author,
      	content,
      	to_char(writeday,'YYYY/MM/dd') as writeday,
      	readcnt
      from board
      order by num desc
    </select>
    
    <select id="selectByNum" parameterType="int" resultType="Board" >
       select 
      	num,
      	title,
      	author,
      	content,
      	writeday,
      	readcnt
      from board
      where num = #{num}
    </select>

     <insert id="boardWrite" parameterType="Board">
        insert into board (num,title,author,content)
        values ( board_num.nextval, #{title}, #{author}, #{content})
     </insert>
     
     <update id="boardUpdate" parameterType="Board">
        update board
        set title=#{title}, author=#{author}, content=#{content}
        where num=#{num}
     </update>
     
     <delete id="boardDelete" parameterType="int">
       delete from board
       where num=#{num}
     </delete>
     
     <update id="readcnt" parameterType="int">
       update board
       set readcnt = readcnt  + 1
       where num = #{num}
     </update>
</mapper>






